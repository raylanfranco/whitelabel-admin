{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "singularName": "message",
    "pluralName": "messages",
    "displayName": "Message"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "conversation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::conversation.conversation",
      "inversedBy": "messages"
    },
    "text": {
      "type": "text"
    },
    "sender": {
      "type": "enumeration",
      "enum": [
        "client",
        "business",
        "system"
      ]
    },
    "timestamp": {
      "type": "datetime"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isRead": {
      "type": "boolean"
    }
  }
}
